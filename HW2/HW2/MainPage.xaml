<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HW2.MainPage">

    <StackLayout Padding="5">
        <StackLayout.Resources>
            <ResourceDictionary>
                <x:Array x:Key="testTexts" Type="{x:Type x:String}">
                    <x:String >Заметка 1</x:String>
                    <x:String >Заметка 2</x:String>
                    <x:String >Заметка 3</x:String>
                </x:Array>
            </ResourceDictionary>
        </StackLayout.Resources>
        <StackLayout BindableLayout.ItemsSource="{Binding Source={StaticResource testTexts}}" x:Name="notes">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="5">
                        <Label Text="{Binding}"></Label>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
        <Button Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
